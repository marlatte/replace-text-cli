{
  "name": "replace-text-cli",
  "version": "0.1.0",
  "description": "A text replacement command line utility with dry-run, mapping, and regex support.",
  "type": "module",
  "main": "cli.js",
  "bin": {
    "replace-text": "./bin/cli.js"
  },
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prelint": "tsc --noEmit",
    "lint": "eslint --report-unused-disable-directives",
    "prepare": "husky"
  },
  "keywords": [
    "text",
    "replace",
    "cli",
    "regex",
    "mapping",
    "automation"
  ],
  "author": "marlatte",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@stylistic/eslint-plugin": "^5.2.0",
    "@tsconfig/node-lts": "^22.0.2",
    "@types/node": "^24.0.15",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --report-unused-disable-directives",
      "prettier --write"
    ]
  }
}
