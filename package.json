{
  "name": "replace-text-cli",
  "version": "0.0.0",
  "description": "A text replacement command line utility with dry-run, mapping, and regex support.",
  "type": "module",
  "main": "dist/cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/marlatte/replace-text-cli"
  },
  "homepage": "https://github.com/marlatte/replace-text-cli",
  "bin": {
    "replace-text": "dist/cli.js"
  },
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prelint": "tsc --noEmit",
    "lint": "eslint --report-unused-disable-directives",
    "prepare": "husky < /dev/tty",
    "build": "tsup",
    "start": "node dist/cli.js",
    "dev": "tsup --watch --onSuccess \"node dist/cli.js\""
  },
  "keywords": [
    "text",
    "replace",
    "cli",
    "regex",
    "mapping",
    "automation"
  ],
  "author": "marlatte",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@inquirer/testing": "^2.1.49",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@tsconfig/node-lts": "^22.0.2",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "memfs": "^4.36.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --report-unused-disable-directives",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@inquirer/prompts": "^7.8.0",
    "commander": "^14.0.0",
    "is-unicode-supported": "^2.1.0",
    "yoctocolors": "^2.1.1"
  }
}
